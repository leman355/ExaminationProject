@model ExamCategoryVM

@{
    int c = 1;
}

<main>
    <div class="container">
        <h1 class="title text-center py-3">Exam Name</h1>
        <div class="question mb-3">
            <ol>
                @foreach (var question in Model.Questions)
                {
                    <li style="font-size:1.5rem">
                        @question.Content
                        <div class="answers mt-3">
                            <label class="d-block mb-2">
                                @foreach (var questionanswer in Model.QuestionAnswers.Where(x => x.QuestionId == question.Id))
                                {
                                    @if (questionanswer.Question.ExamCategoryId == Model.SelectedCategoryId)
                                    {
                                        <p style="font-size:1rem" class="d-flex align-items-center">
                                            <input value="true" id=`answ_@c` type="checkbox" />
                                            <label class="mx-3" style="user-select:none" for=`answ_@c`>
                                                @questionanswer.Answer.Option
                                            </label>
                                        </p>
                                        c++;
                                    }
                                }
                            </label>

                        </div>
                    </li>
                }
            </ol>
        </div>
    </div>
</main>